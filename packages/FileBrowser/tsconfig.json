{
    "compilerOptions": {
      "target": "ES2017",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext",
      ],
      "declaration": true,
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "strictNullChecks": true,
      "forceConsistentCasingInFileNames": true,
      "incremental": true,
      "esModuleInterop": true,
      "module": "ES2015",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "jsx": "react",
      "emitDeclarationOnly": true
    },
    "include": [
      "**/*.ts",
      "**/*.tsx",
      "./*.js",
      "./src/**/*.js"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  